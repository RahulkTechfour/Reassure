<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/llCalander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/calendarlinrecy"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Rojana Bajaar"
                android:textColor="@color/color_black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDivision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:textSize="@dimen/_13sdp"

                    android:text="Division        " />

                <TextView
                    android:id="@+id/txtcolonDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_toRightOf="@+id/txtDivision"
                    android:textSize="@dimen/_16sdp"

                    android:text=":"/>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/_12sdp"


                    android:layout_toRightOf="@+id/txtcolonDiv"
                    android:padding="1dp"
                    android:text="Fan" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Status           "
                    android:textSize="@dimen/_13sdp" />


                <TextView
                    android:id="@+id/txtcolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"

                    android:layout_toRightOf="@+id/txtStatus"
                    android:textSize="@dimen/_16sdp"

                    android:text=":"/>


                <TextView
                    android:id="@+id/txtSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtcolon"
                    android:padding="1dp"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"

                    android:textSize="@dimen/_12sdp"


                    android:textColor="@color/color_yellow"
                    android:text="  Pending" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:textSize="@dimen/_13sdp"
                    android:text="Request No  "/>


                <TextView
                    android:id="@+id/Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toRightOf="@+id/txtRequest"
                    android:padding="1dp"
                    android:text=":"

                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/txtRequestNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Request"
                    android:padding="1dp"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"

                    android:textSize="@dimen/_14sdp"


                    android:textColor="@color/color_yellow"
                    android:text="  Pending" />
            </RelativeLayout>




        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCall"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oval_view"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:id="@+id/ivCalendrCall"
                android:src="@drawable/callcon"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txtDiameter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#eeeeee"
        android:padding="1dp"/>







</LinearLayout>

</layout>
