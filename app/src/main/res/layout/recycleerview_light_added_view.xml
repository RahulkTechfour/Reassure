<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="7">




    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tvaadeditem_itemone"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/color_black"

        android:gravity="center"
        android:textSize="@dimen/_12sdp" />


    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tvaadeditem_itemtwo"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/color_black"

        android:gravity="center"
        android:textSize="@dimen/_12sdp" />


    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tvaadeditem_itemthree"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_black"

        android:textSize="@dimen/_12sdp" />


    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tvaadeditem_itemfour"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/color_black"

        android:gravity="center"
        android:textSize="@dimen/_12sdp" />


    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tvaadeditem_itemfive"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_black"

        android:textSize="@dimen/_12sdp" />

    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tv_itemsix"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_black"

        android:textSize="@dimen/_12sdp" />


    <com.luminous.pdi.custom_text_view.TextViewRegular
        android:id="@+id/tv_itemseven"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/Ivedit"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@android:drawable/ic_menu_edit"
            android:textColor="@color/color_black"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/Ivdelete"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:src="@android:drawable/ic_delete"
            android:textColor="@color/color_black"
            android:gravity="center"
         />


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/blue_circle_calendar" />
</LinearLayout>